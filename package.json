{
  "name": "mocha-typescript-seed",
  "version": "1.0.0",
  "description": "A project with mocha-typescript enabled",
  "main": "index.js",
  "scripts": {
    "test": "tsc && nyc mocha && tslint --project .",
    "watch": "mocha-typescript-watch",
    "prepare": "tsc && tslint --project .",
    "tslint-fix": "tslint --fix --project .",
    "tslint": "tslint --project ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pana-cc/mocha-typescript-seed.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/pana-cc/mocha-typescript-seed/issues"
  },
  "homepage": "https://github.com/pana-cc/mocha-typescript-seed#readme",
  "devDependencies": {
    "@types/chai": "*",
    "@types/mocha": "*",
    "@types/node": "^8.0.47",
    "chai": "*",
    "mocha": "*",
    "mocha-typescript": "*",
    "nyc": "*",
    "source-map-support": "*",
    "typescript": "*"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 70,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  },
  "dependencies": {
    "tslint": "^5.8.0"
  }
}
